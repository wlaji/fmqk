<!--pages/photoAlbum/photoAlbum.wxml-->
<view class="container">
  <view class="hyCon">
    <view class="t3">
      最多可上传15张图片,开通会员既可以无限制上传
    </view>
    <view class="btn">
      <van-button type="primary" size="small" bind:click="beMember"><i class="iconfont icon-huiyuan1" style="margin-right:4px;"></i> {{userInfo.userLevel>1?'续费会员':'开通会员'}}</van-button>
    </view>
  </view>
  <view class="photoCon">
    <view class="item uploadItem" bindtap="uploadPhoto">
      <mp-icon icon="add" color="#999" size="{{30}}"></mp-icon>
      <text>上传照片</text>
    </view>
    <view class="item" wx:for="{{imgList}}" wx:key="index" bindtap="preview" data-src="{{imgList[index]}}">
      <image src="{{item}}" mode="aspectFit"></image>
    </view>
  </view>
</view>