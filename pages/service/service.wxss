.van-hairline--top-bottom:after {
  border: none !important;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
}

.noLoginWrap {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  background-color: #fff;
}

.noLoginWrap .imgWrap {
  margin-top: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.btnWrap {
  margin-top: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.btnWrap .btn2 {
  margin-top: 10px;
  display: inline-block;
  width: 600rpx;
  text-align: center;
  color: #AA824D;
  font-size: 14px;
}

.filterArea {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
  background-color: #fff;
  padding: 5px;
}

.filterBtn {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.filterPopup {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.filterPopup .filterContent {
  overflow: auto;
  flex: 1;
  height: 0;
  padding: 10px;
}

.filterPopup .saveBtn {
  text-align: center;
  padding: 10px;
  border-top: 1px solid #ccc;
  background-color: #eee;
}

.filter-item {
  margin-bottom: 20px;
}

.filter-item .filter-title {
  font-weight: 600;
  font-size: 14px;
  margin-bottom: 6px;
}

.filter-item .filter-selectArea {
  display: flex;
  flex-wrap: wrap;
}

.filter-item .select-item {
  flex-basis: calc(33.3% - 10px);
  padding:4px 8px;
  background-color: #F5F5F5;
  border-radius: 4px;
  color:#666;
  margin-right: 10px;
  margin-bottom: 10px;
  text-align: center;
  font-size:12px;
}

.filter-item .select-item.active {
  background-color: #FFE8F0;
  color:#FF82AB;
}

.customInput{
  display: inline-block;
  width: 200rpx !important;
  text-align: center !important;
  background-color: #F5F5F5 !important;
  border-radius: 10px !important;
}

.loginUserWrap {
  flex: 1;
  height: 0;
  padding: 10px;
  background-color: #eee;
}

.loginUserWrap .userItem {
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

.loginUserWrap .userItem .imgWrap {
  flex-shrink: 0;
  width: 120px;
  height: 135px;
}

.rightInfo {
  padding-left: 20px;
}

.rightInfo .topInfo {
  display: flex;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
}

.rightInfo .des {
  width: 420rpx;
  margin-top: 5px;
  color: #6d6d6d;
  font-size: 12px;
}

.rightInfo .info {
  display: flex;
  flex-wrap: wrap;
  margin-top: 5px;
}

.tagItem {
  margin-right: 10rpx;
}

.photos {
  margin-top: 10px;
}