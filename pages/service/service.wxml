<view class="container">
  <van-popup show="{{ showDialog }}" position="bottom" custom-style="height:60%" lock-scroll close-on-click-overlay="{{false}}">
    <view>
      <view style="padding:10px;">
        <van-row gutter="20">
          <van-col span="12">
            <van-button type="default" size="small" bind:click="onClose">取消</van-button>
          </van-col>
          <van-col span="12" style="text-align:right">
            <van-button type="primary" size="small" bind:click="filterFn">确认</van-button>
          </van-col>
        </van-row>
      </view>
      <van-cell-group border="{{false}}">
        <van-cell center title="身高" border="{{false}}">
          <van-picker columns="{{ heightArr }}" column-class="columnItem" bind:change="onChangeHeight" visible-item-count="1" />
        </van-cell>
        <van-cell center title="收入" border="{{false}}">
          <van-picker columns="{{ incomeArr }}" column-class="columnItem" bind:change="onChangeIncome" visible-item-count="1" />
        </van-cell>
        <van-cell center title="学历" border="{{false}}">
          <van-picker columns="{{ newEducationArr }}" column-class="columnItem" bind:change="onChangeEducation" visible-item-count="1" />
        </van-cell>
        <van-cell center title="星座" border="{{false}}">
          <van-picker columns="{{ newStarSignArr }}" column-class="columnItem" bind:change="onChangeStarSign" visible-item-count="1" />
        </van-cell>
      </van-cell-group>
    </view>
  </van-popup>
  <view wx:if="{{!isLogin}}" class="noLoginWrap">
    <view class="imgWrap">
      <image style="width: 80px; height: 80px;" mode="aspectFill" src="/static/images/edit.png">
      </image>
      <text style="color:#999999;margin-top:20px;font-size:14px;">您还未登录, 请登录~</text>
    </view>
    <view class="btnWrap">
      <navigator url="/pages/completeInfo/completeInfo" hover-class="none">
        <my-button innerText="开始邂逅"></my-button>
      </navigator>
      <navigator url="/pages/login/login" hover-class="none">
        <view class="btn2">已有账号, 立即登录></view>
      </navigator>
    </view>
  </view>
  <view class="loginUserWrap" wx:if="{{isLogin}}">
    <view class="userItem" wx:for="{{userList}}" wx:key="index" bindtap="viewDetail" data-id="{{item.id}}">
      <view class="imgWrap">
        <image style="width: 100%; height: 100%; background-color: #eeeeee;" mode="aspectFill"
          src="{{item.photos[0].photoPath}}">
        </image>
      </view>
      <view class="rightInfo">
        <view class="topInfo">
          <view class="name">{{item.nickName || '微信用户'}}</view>
          <view class="hy" wx:if="{{userInfo.userLevel>1}}">
            <i class="iconfont icon-huiyuan1" style="font-size:14px;"></i>
          </view>
          <!-- <view class="sm">
                        <i class="iconfont icon-shimingrenzheng1" style="font-size:14px"></i>
                    </view> -->
        </view>
        <view class="info">
          <view class="tagItem">{{item.age}}岁</view>
          <view class="tagItem" wx:if="{{item.location}}">{{item.location}}</view>
          <view class="tagItem" wx:if="{{item.profession}}">{{item.profession}}</view>
          <view class="tagItem" wx:if="{{item.height}}">{{item.height}}cm</view>
        </view>
        <view class="des" wx:if="{{item.selfIntroduction}}">{{item.selfIntroduction}}</view>
      </view>
    </view>
  </view>
  <view wx:if="{{isLogin}}" class="cusBtn">
    <button type="primary" size="mini" bindtap="showExtend">
      <mp-icon icon="search" color="#fff" size="{{25}}"></mp-icon> 按设定条件查找
    </button>
    <view class="extendWrap" wx:if="{{show}}" bindtap="showExtend"></view>
  </view>
</view>