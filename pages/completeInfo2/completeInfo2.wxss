.container {
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: #eee;
}

.imgWrap {
    position: relative;
    width: 100%;
    height: 180px;
}

.imgWrap::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.textInfo {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
    font-size: 24px;
}

.textInfo view {
    white-space: nowrap;
}

.content {
    flex: 1;
    background-color: #fff;
    padding: 20px 10px 10px;
    margin: 10px;
    border-radius: 4px;
}

.skip{
    position: absolute;
    bottom:20px;
    left:50%;
    transform: translateX(-50%);
    color: #999;
    font-size: 14px;
}