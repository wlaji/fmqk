<!--pages/completeInfo/completeInfo.wxml-->
<view class="container">
  <view class="content">
    <mp-cell ext-class="cellItem" title="年龄" link>
      <view slot="footer">
        <picker mode="multiSelector" bindchange="bindIncomeMultiPickerChange" data-name="income"
          bindcolumnchange="bindIncomeMultiPickerColumnChange" value="{{incomeMultiIndex}}" range="{{incomeMultiArray}}"
          header-text="月收入">
          <view wx:if="{{form.incomeMin && form.incomeMax}}">
            {{form.incomeMin+'-'+form.incomeMax}}
          </view>
          <view wx:if="{{!form.incomeMin || !form.incomeMax}}">
            请选择
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="身高" link>
      <view slot="footer">
        <picker mode="multiSelector" bindchange="bindIncomeMultiPickerChange" data-name="income"
          bindcolumnchange="bindIncomeMultiPickerColumnChange" value="{{incomeMultiIndex}}" range="{{incomeMultiArray}}"
          header-text="月收入">
          <view wx:if="{{form.incomeMin && form.incomeMax}}">
            {{form.incomeMin+'-'+form.incomeMax}}
          </view>
          <view wx:if="{{!form.incomeMin || !form.incomeMax}}">
            请选择
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="月收入" link>
      <view slot="footer">
        <picker mode="multiSelector" bindchange="bindIncomeMultiPickerChange" data-name="income"
          bindcolumnchange="bindIncomeMultiPickerColumnChange" value="{{incomeMultiIndex}}" range="{{incomeMultiArray}}"
          header-text="月收入">
          <view wx:if="{{form.incomeMin && form.incomeMax}}">
            {{form.incomeMin+'-'+form.incomeMax}}
          </view>
          <view wx:if="{{!form.incomeMin || !form.incomeMax}}">
            请选择
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="学历" link>
      <view slot="footer">
        <picker bindchange="changeForm" data-name="education" value="{{form.education}}" range="{{educationArr}}"
          header-text="学历选择">
          <view class="picker">
            {{educationArr[form.education] || '请选择'}}
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="婚姻状况" link>
      <view slot="footer">
        <picker bindchange="changeForm" data-name="marriage" value="{{form.marriage}}" range="{{marriageArr}}"
          header-text="婚姻状况选择">
          <view class="picker">
            {{marriageArr[form.marriage] || '请选择'}}
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="体型" link>
      <view slot="footer">
        <view wx:if="{{form.gender==1}}">
          <picker bindchange="changeForm" data-name="bodyShape" value="{{form.bodyShape}}" range="{{manbodyShapeArr}}"
            header-text="体型">
            <view class="picker">
              {{manbodyShapeArr[form.bodyShape]|| '请选择'}}
            </view>
          </picker>
        </view>
        <view wx:if="{{form.gender==2}}">
          <picker bindchange="changeForm" data-name="bodyShape" value="{{form.bodyShape}}" range="{{girlbodyShapeArr}}"
            header-text="体型">
            <view class="picker">
              {{girlbodyShapeArr[form.bodyShape]|| '请选择'}}
            </view>
          </picker>
        </view>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="工作地区" link>
      <view slot="footer">
        <picker mode="region" bindchange="changeForm" data-name="region" value="{{form.region}}" header-text="地区选择">
          <view wx:if="{{form.region}}">
            {{form.region[0]}}，{{form.region[1]}}，{{form.region[2]}}
          </view>
          <view wx:if="{{!form.region.length}}">
            请选择
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="有没有小孩" link>
      <view slot="footer">
        <picker bindchange="changeForm" data-name="hadChild" value="{{form.hadChild}}" range="{{hadChildArr}}"
          header-text="有无小孩">
          <view class="picker">
            {{hadChildArr[form.hadChild] || '请选择'}}
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="是否想要孩子" link>
      <view slot="footer">
        <picker bindchange="changeForm" data-name="wantChild" value="{{form.wantChild}}" range="{{wantChildArr}}"
          header-text="有无小孩">
          <view class="picker">
            {{wantChildArr[form.wantChild] || '请选择'}}
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="是否吸烟" link>
      <view slot="footer">
        <picker bindchange="changeForm" data-name="smoke" value="{{form.smoke}}" range="{{smokeArr}}"
          header-text="是否吸烟">
          <view class="picker">
            {{smokeArr[form.smoke]|| '请选择'}}
          </view>
        </picker>
      </view>
    </mp-cell>
    <mp-cell ext-class="cellItem" title="是否喝酒" link>
      <view slot="footer">
        <picker bindchange="changeForm" data-name="drink" value="{{form.drink}}" range="{{drinkArr}}"
          header-text="是否吸烟">
          <view class="picker">
            {{drinkArr[form.drink]|| '请选择'}}
          </view>
        </picker>
      </view>
    </mp-cell>
  </view>
  <view style="text-align:center;position:fixed;bottom:20px;left:50%;transform:translate(-50%)">
    <my-button innerText="保存" bindtap="save"></my-button>
  </view>
</view>