/* pages/guide/guide.wxss */
.container {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.btnWrap {
    position: absolute;
    left: 50%;
    bottom: 10%;
    transform: translateX(-50%);

}

.btnWrap .btn1 {
    display: inline-block;
    width: 600rpx;
    padding: 8px 10px;
    color: #fff;
    background: linear-gradient(to right, #965b96, hsl(300, 62%, 40%));
    text-align: center;
    border-radius: 4px;
    font-size: 14px;
}

.btnWrap .btn2 {
    margin-top: 20px;
    display: inline-block;
    width: 600rpx;
    text-align: center;
    color: #fff;
    font-size: 14px;
}