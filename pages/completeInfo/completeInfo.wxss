.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding-bottom: 30px;
  background-color: #eee;
}
.imgWrap{
  position: relative;
  width: 100%;
  height: 180px;
}
.imgWrap::after{
  content: "";
  position: absolute;
  left:0;
  right:0;
  top:0;
  bottom: 0;
}

.textInfo{
  position: absolute;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  text-align: center;
  color: #fff;
  font-size:24px;
}

.textInfo view{
  white-space: nowrap;
}

.content{
  overflow: auto;
  height: 0;
  flex:1;
  background-color: #fff;
  margin: 10px;
  border-radius: 4px;
}

.btnWrap {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.btnWrap .btn2 {
  margin-top: 10px;
  display: inline-block;
  width: 600rpx;
  text-align: center;
  color: #964596;
  font-size: 14px;
}