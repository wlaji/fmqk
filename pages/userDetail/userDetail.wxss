.container {
    min-height: 100vh;
    padding: 10px;
    background-color: #eee;
}

.contact {
    position: fixed;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #fff;
    border-radius: 50%;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.5);
}

.contact button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px !important;
    height: 50px;
    border-radius: 50%;
    background-color: #fff;
}

.contact image {
    width: 40px;
    height: 40px;
}

.swiper {
    height: 300px;
}

.swiper swiper {
    height: 100%;
}

.swiper .swipe-item {
    width: 100%;
    height: 100%;
    border-radius: 10px;
}

.hy {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 5px;
    width: 18px;
    height: 18px;
    background-color: #eee;
    border-radius: 4px;
}

.hy {
    background-color: #fcc52ed2;
}

.hy i {
    color: #ffffff;
}

.info {
    padding: 10px;
    margin: 10px 0;
    border-radius: 10px;
    background-color: #fff;
}

.info .title {
    margin-bottom: 10px;
    color: #333;
    font-weight: 700;
}

.info0 {
    color: #6d6d6d;
}

.info1 .top {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.info1 .top button {
    position: absolute;
    top: 0px;
    right: 10px;
    font-size: 14px;
}

.info1 .top .nickName {
    font-weight: 700;
}

.info1 .bottom {
    display: flex;
    align-items: center;
    color: #6d6d6d;
    font-size: 14px;
}

.info1 .bottom text {
    margin-right: 5px;
}

.info1 .bottom .dot {
    display: inline-block;
    width: 2px;
    height: 2px;
    border-radius: 50%;
    background-color: #6d6d6d;
}

.info2 {
    color: #6d6d6d;
    font-size: 14px;
}

.info2 .con {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 10px;
}

.info2 .tag {
    color: #6d6d6d;
    background-color: #eee;
    padding: 2px 4px;
    font-size: 12px;
    border-radius: 4px;
    margin-right: 4px;
    margin-bottom: 4px;
}