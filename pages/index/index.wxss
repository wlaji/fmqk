/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  padding: 10px;
  background-color: #eee;

}

.userWrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  background-color: #fff;
}

.userWrap .userItem {
  flex-basis: 45%;
  margin: 10px 0 0 0;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

.userWrap .userItem .imgWrap {
  height: 200px;
}

.userWrap .userItem .name {
  text-align: center;
  font-size: 18px;
}

.userWrap .userItem .info {
  color: #999999;
  text-align: center;
}

.loginUserWrap .userItem {
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

.loginUserWrap .userItem .imgWrap {
  flex-shrink: 0;
  width: 100px;
  height: 100px;
}

.rightInfo {
  padding-left: 20px;
  padding-top: 10px;
}

.rightInfo .topInfo {
  display: flex;
  align-items: center;
}

.hy,
.sm {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 5px;
  width: 20px;
  height: 20px;
  background-color: #eee;
  border-radius: 4px;
}

.hy {
  background-color: rgba(199, 155, 33, 0.822);
}

.hy i,
.sm i{
  color: #ffffff;
}

.sm {
  background-color: #30e499d2;
}


.rightInfo .des {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 420rpx;
}